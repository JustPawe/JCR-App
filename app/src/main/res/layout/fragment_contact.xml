<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jcrBlue">


    <ScrollView
        android:id="@+id/scrollContact"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/emailET"
                android:layout_width="295dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@color/activityBG"
                android:ems="10"
                android:fontFamily="@font/francois_one"
                android:gravity="center"
                android:hint="Email"
                android:inputType="textPersonName"
                android:textColor="@color/jcrBlue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameET" />

            <TextView
                android:id="@+id/contactTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/francois_one"
                android:gravity="center"
                android:text="@string/contact"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/subjectET"
                android:layout_width="295dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@color/activityBG"
                android:ems="10"
                android:fontFamily="@font/francois_one"
                android:gravity="center"
                android:hint="Subject"
                android:inputType="textPersonName"
                android:textColor="@color/jcrBlue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailET" />

            <EditText
                android:id="@+id/nameET"
                android:layout_width="295dp"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:background="@color/activityBG"
                android:ems="10"
                android:fontFamily="@font/francois_one"
                android:gravity="center"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textColor="@color/jcrBlue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contactTV" />

            <EditText
                android:id="@+id/messageET"
                android:layout_width="288dp"
                android:layout_height="206dp"
                android:layout_marginTop="29dp"
                android:background="@color/activityBG"
                android:ems="10"
                android:fontFamily="@font/francois_one"
                android:gravity="start|top|center"
                android:hint="Your message"
                android:inputType="textMultiLine"
                android:textColor="@color/jcrBlue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subjectET" />

            <Button
                android:id="@+id/submitBtn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="187dp"
                android:layout_height="75dp"
                android:layout_marginStart="112dp"
                android:layout_marginLeft="112dp"
                android:layout_marginTop="42dp"
                android:layout_marginEnd="112dp"
                android:layout_marginRight="112dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/buttonw"
                android:fontFamily="@font/francois_one"
                android:text="@string/submit"
                android:textColor="@color/jcrBlue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/messageET" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>